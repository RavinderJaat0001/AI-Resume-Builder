<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title><%= fname %> <%= lname %> - Resume</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 text-gray-800">
  <div class="max-w-6xl mx-auto my-8 bg-white shadow-lg rounded-lg overflow-hidden">

    <!-- Image + Name -->
    <div class="bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 text-white text-center p-8">
      <img src="<%= imageURL || 'https://via.placeholder.com/120' %>" alt="Profile" class="w-32 h-32 mx-auto rounded-full border-4 border-white shadow-lg mb-4 object-cover" />
      <h1 class="text-3xl font-bold"><%= fname %> <%= lname %></h1>
      <p class="text-sm mt-1"><%= perscity %>, <%= perscountry %> | <%= email %> | <%= phoneno %></p>
    </div>

    <!-- Summary -->
    <% if (summary) { %>
    <section class="p-6 bg-gray-100">
      <h2 class="text-xl font-semibold mb-2 border-b border-gray-300">Professional Summary</h2>
      <p class="text-sm"><%- summary %></p>
    </section>
    <% } %>

    <!-- Skills -->
    <% if (skills && skills.length > 0) { %>
    <section class="p-6 bg-blue-50">
      <h2 class="text-xl font-semibold mb-2 border-b border-blue-300">Skills</h2>
      <div class="flex flex-wrap gap-2">
        <% skills.forEach(skill => { %>
          <span class="bg-blue-200 text-blue-900 text-sm px-3 py-1 rounded-full"><%= skill %></span>
        <% }) %>
      </div>
    </section>
    <% } %>

    <!-- Experience -->
    <% if (experience && experience.length > 0) { %>
    <section class="p-6 bg-green-50">
      <h2 class="text-xl font-semibold mb-2 border-b border-green-300">Experience</h2>
      <% experience.forEach(exp => { %>
        <div class="mb-3">
          <p class="font-semibold"><%= exp.jobtitle %> at <%= exp.employer %></p>
          <p class="text-sm text-gray-600"><%= exp.expcity %>, <%= exp.expcountry %> | <%= exp.startdate %> - <%= exp.enddate %></p>
        </div>
      <% }) %>
    </section>
    <% } %>

    <!-- Education -->
    <% if (education && education.length > 0) { %>
    <section class="p-6 bg-yellow-50">
      <h2 class="text-xl font-semibold mb-2 border-b border-yellow-300">Education</h2>
      <% education.forEach(edu => { %>
        <div class="mb-3">
          <p class="font-semibold"><%= edu.degree %> - <%= edu.schoolname %></p>
          <p class="text-sm text-gray-600"><%= edu.schoollocation %> | <%= edu.edustartdate %> - <%= edu.eduenddate %></p>
          <% if (edu.edusummary) { %>
            <p class="text-sm"><%- edu.edusummary %></p>
          <% } %>
        </div>
      <% }) %>
    </section>
    <% } %>

    <!-- Courses -->
    <% if (courses && courses.length > 0) { %>
    <section class="p-6 bg-purple-50">
      <h2 class="text-xl font-semibold mb-2 border-b border-purple-300">Courses</h2>
      <% courses.forEach(course => { %>
        <p class="text-sm"><strong><%= course.coursename %></strong> - <%= course.courseinstitution %> (<%= course.coursestartDate %> - <%= course.courseendDate %>)</p>
      <% }) %>
    </section>
    <% } %>

    <!-- Internships -->
    <% if (internships && internships.length > 0) { %>
    <section class="p-6 bg-pink-50">
      <h2 class="text-xl font-semibold mb-2 border-b border-pink-300">Internships</h2>
      <% internships.forEach(intern => { %>
        <div class="mb-3">
          <p class="font-semibold"><%= intern.jobTitle %> at <%= intern.recruiter %></p>
          <p class="text-sm text-gray-600"><%= intern.city %> | <%= intern.startDate %> - <%= intern.endDate %></p>
          <p class="text-sm"><%= intern.description %></p>
        </div>
      <% }) %>
    </section>
    <% } %>

    <!-- Languages -->
    <% if (languages && languages.length > 0) { %>
    <section class="p-6 bg-indigo-50">
      <h2 class="text-xl font-semibold mb-2 border-b border-indigo-300">Languages</h2>
      <ul class="list-disc list-inside text-sm">
        <% languages.forEach(lang => { %>
          <li><%= lang.name %> - <%= lang.level %></li>
        <% }) %>
      </ul>
    </section>
    <% } %>

    <!-- Hobbies -->
    <% if (hobbies) { %>
    <section class="p-6 bg-red-50">
      <h2 class="text-xl font-semibold mb-2 border-b border-red-300">Hobbies</h2>
      <p class="text-sm"><%= hobbies %></p>
    </section>
    <% } %>

  </div>
</body>
</html>
