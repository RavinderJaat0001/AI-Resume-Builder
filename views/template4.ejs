<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Resume Template 4</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50">
  <div class="max-w-4xl mx-auto bg-white shadow-md rounded-lg p-8 my-10">

    <!-- Header -->
    <div class="border-b pb-4 mb-6 text-center">
      <h1 class="text-3xl font-bold text-gray-800"><%= fname %> <%= lname %></h1>
      <p class="text-sm text-gray-600">
        <%= email %> | <%= phoneno %> | <%= perscity %>, <%= perscountry %>, <%= pincode %>
      </p>
    </div>

    <!-- Summary -->
    <% if (summary && summary.trim() !== '') { %>
      <div class="mb-6">
        <h2 class="text-xl font-semibold border-b pb-1 mb-2 text-gray-700">Professional Summary</h2>
        <div class="text-sm text-gray-700"><%- summary %></div>
      </div>
    <% } %>

    <!-- Skills -->
    <% if (skills && skills.length > 0) { %>
      <div class="mb-6">
        <h2 class="text-xl font-semibold border-b pb-1 mb-2 text-gray-700">Skills</h2>
        <div class="flex flex-wrap gap-2">
          <% skills.forEach(skill => { %>
            <span class="bg-gray-200 text-sm px-3 py-1 rounded-full text-gray-800 font-medium"><%= skill %></span>
          <% }) %>
        </div>
      </div>
    <% } %>

    <!-- Experience -->
    <% if (experience && experience.length > 0) { %>
      <div class="mb-6">
        <h2 class="text-xl font-semibold border-b pb-1 mb-2 text-gray-700">Experience</h2>
        <% experience.forEach(exp => { %>
          <div class="mb-2">
            <p class="font-medium"><%= exp.jobtitle %>, <%= exp.employer %> (<%= exp.startdate %> - <%= exp.enddate %>)</p>
            <p class="text-sm text-gray-600"><%= exp.city %>, <%= exp.country %></p>
          </div>
        <% }) %>
      </div>
    <% } %>

    <!-- Education -->
    <% if (education && education.length > 0) { %>
      <div class="mb-6">
        <h2 class="text-xl font-semibold border-b pb-1 mb-2 text-gray-700">Education</h2>
        <% education.forEach(edu => { %>
          <p class="text-sm font-semibold"><%= edu.degree %> - <%= edu.schoolname %></p>
          <p class="text-sm text-gray-600"><%= edu.schoollocation %> (<%= edu.edustartdate %> - <%= edu.eduenddate %>)</p>
          <% if (edu.edusummary && edu.edusummary.trim() !== '') { %>
            <p class="text-sm mt-1"><%- edu.edusummary %></p>
          <% } %>
        <% }) %>
      </div>
    <% } %>

    <!-- Courses -->
    <% if (courses && courses.length > 0) { %>
      <div class="mb-6">
        <h2 class="text-xl font-semibold border-b pb-1 mb-2 text-gray-700">Courses</h2>
        <% courses.forEach(course => { %>
          <p class="text-sm font-medium"><%= course.coursename %></p>
          <p class="text-sm text-gray-600"><%= course.courseinstitution %> (<%= course.coursestartDate %> - <%= course.courseendDate %>)</p>
        <% }) %>
      </div>
    <% } %>

    <!-- Languages -->
    <% if (languages && languages.length > 0) { %>
      <div class="mb-6">
        <h2 class="text-xl font-semibold border-b pb-1 mb-2 text-gray-700">Languages</h2>
        <ul class="list-disc list-inside text-sm text-gray-700">
          <% languages.forEach(lang => { %>
            <li><%= lang.name %> - <%= lang.level %></li>
          <% }) %>
        </ul>
      </div>
    <% } %>

    <!-- Hobbies -->
    <% if (typeof hobbies === 'string' && hobbies.trim() !== '') { %>
      <div class="mb-6">
        <h2 class="text-xl font-semibold border-b pb-1 mb-2 text-gray-700">Hobbies</h2>
        <p class="text-sm text-gray-700"><%- hobbies %></p>
      </div>
    <% } %>

  </div>
</body>
</html>
