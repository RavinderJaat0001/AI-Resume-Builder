<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Resume Template 5</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 font-sans">
  <div class="max-w-6xl mx-auto my-8 bg-white shadow-xl rounded-lg overflow-hidden flex flex-col md:flex-row">

    <!-- Sidebar -->
    <aside class="md:w-1/3 bg-gradient-to-b from-indigo-700 to-blue-500 text-white p-6 flex flex-col items-center">
      <img 
        src="<%= imageURL || 'https://via.placeholder.com/120' %>" 
        alt="Profile Image" 
        class="w-32 h-32 rounded-full object-cover border-4 border-white mb-4"
      />
      <h2 class="text-2xl font-bold"><%= fname %> <%= lname %></h2>
      <p class="text-sm mt-2 text-center"><%= perscity %>, <%= perscountry %> - <%= pincode %></p>
      <p class="text-sm"><%= email %></p>
      <p class="text-sm"><%= phoneno %></p>

      <% if (skills && skills.length > 0) { %>
        <div class="mt-6 w-full">
          <h3 class="text-lg font-semibold border-b border-white pb-1 mb-2">Skills</h3>
          <div class="flex flex-wrap gap-2">
            <% skills.forEach(skill => { %>
              <span class="bg-white text-indigo-700 px-3 py-1 text-xs rounded-full font-medium"><%= skill %></span>
            <% }) %>
          </div>
        </div>
      <% } %>

      <% if (languages && languages.length > 0) { %>
        <div class="mt-6 w-full">
          <h3 class="text-lg font-semibold border-b border-white pb-1 mb-2">Languages</h3>
          <ul class="list-disc pl-5 text-sm">
            <% languages.forEach(lang => { %>
              <li><%= lang.name %> - <%= lang.level %></li>
            <% }) %>
          </ul>
        </div>
      <% } %>
    </aside>

    <!-- Main Content -->
    <main class="md:w-2/3 p-8 bg-gray-50">

      <% if (summary && summary.trim() !== '') { %>
        <section class="mb-6">
          <h3 class="text-xl font-bold text-indigo-800 border-b pb-1 mb-2">Professional Summary</h3>
          <div class="text-sm text-gray-700"><%- summary %></div>
        </section>
      <% } %>

      <% if (experience && experience.length > 0) { %>
        <section class="mb-6">
          <h3 class="text-xl font-bold text-indigo-800 border-b pb-1 mb-2">Experience</h3>
          <% experience.forEach(exp => { %>
            <div class="mb-3">
              <p class="font-semibold text-gray-800"><%= exp.jobtitle %>, <%= exp.employer %></p>
              <p class="text-sm text-gray-500"><%= exp.city %>, <%= exp.country %> â€” <%= exp.startdate %> to <%= exp.enddate %></p>
             
            </div>
          <% }) %>
        </section>
      <% } %>

      <% if (education && education.length > 0) { %>
        <section class="mb-6">
          <h3 class="text-xl font-bold text-indigo-800 border-b pb-1 mb-2">Education</h3>
          <% education.forEach(edu => { %>
            <div class="mb-2">
              <p class="font-semibold text-gray-800"><%= edu.degree %> - <%= edu.schoolname %></p>
              <p class="text-sm text-gray-600"><%= edu.schoollocation %> (<%= edu.edustartdate %> - <%= edu.eduenddate %>)</p>
              <% if (edu.edusummary && edu.edusummary.trim() !== '') { %>
                <p class="text-sm mt-1 text-gray-700"><%- edu.edusummary %></p>
              <% } %>
            </div>
          <% }) %>
        </section>
      <% } %>

      <% if (courses && courses.length > 0) { %>
        <section class="mb-6">
          <h3 class="text-xl font-bold text-indigo-800 border-b pb-1 mb-2">Courses</h3>
          <% courses.forEach(course => { %>
            <p class="text-sm font-medium text-gray-800"><%= course.coursename %></p>
            <p class="text-sm text-gray-600"><%= course.courseinstitution %> (<%= course.coursestartDate %> - <%= course.courseendDate %>)</p>
          <% }) %>
        </section>
      <% } %>

      <% if (typeof hobbies === 'string' && hobbies.trim() !== '') { %>
        <section class="mb-6">
          <h3 class="text-xl font-bold text-indigo-800 border-b pb-1 mb-2">Hobbies</h3>
          <p class="text-sm text-gray-700"><%- hobbies %></p>
        </section>
      <% } %>

    </main>
  </div>
</body>
</html>
