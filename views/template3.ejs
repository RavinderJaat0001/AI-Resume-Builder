<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Resume Template 3</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">
  <div class="max-w-5xl mx-auto my-10 bg-white shadow-md flex flex-col md:flex-row rounded-lg overflow-hidden">
    
    <!-- Left Section -->
    <div class="md:w-1/3 bg-gray-800 text-white flex flex-col items-center p-6">
        <img 
        src="<%= imageURL || 'https://via.placeholder.com/150' %>" 
        alt="Profile Image" 
        class="w-36 h-36 rounded-full object-cover mb-4 border-4 border-white shadow-md"
      />
      
      <h2 class="text-xl font-semibold"><%= fname %> <%= lname %></h2>
<p class="text-sm mt-2"><%= email %></p>
<p class="text-sm"><%= phoneno %></p>
<p class="text-sm"><%= perscity %>, <%= perscountry %>, <%= pincode %></p>

    </div>

    <!-- Right Section -->
    <div class="md:w-2/3 p-6">
      
      <!-- Summary -->
      <div class="mb-6">
        <h3 class="text-xl font-semibold border-b pb-1 border-gray-300 mb-2">Professional Summary</h3>
        <p class="text-gray-700 text-sm"><%- summary %></p>
      </div>

      <!-- Skills -->
      <div class="mb-6">
        <h3 class="text-xl font-semibold border-b pb-1 border-gray-300 mb-2">Skills</h3>
        <div class="flex flex-wrap gap-2">
            <% skills.forEach(skill => { %>
              <span class="bg-gray-200 text-gray-800 text-xs px-3 py-1 rounded-full font-medium"><%= skill %></span>
            <% }) %>
          </div>
          
      </div>

      <!-- Experience -->
      <div class="mb-6">
        <h3 class="text-xl font-semibold border-b pb-1 border-gray-300 mb-2">Experience</h3>
        <% experience.forEach(exp => { %>

          <div class="mb-3">
            <p class="font-bold"><%= exp.jobtitle %> - <%= exp.employer %></p>
            <p class="text-sm text-gray-500"><%= exp.city %>, <%= exp.country %> | <%= exp.startdate %> - <%= exp.enddate %></p>
          </div>
        <% }) %>
      </div>

      <!-- Education -->
<% if (education && education.length > 0) { %>
    <div class="mb-6">
      <h3 class="text-xl font-semibold border-b pb-1 border-gray-300 mb-2">Education</h3>
      <% education.forEach(edu => { %>
        <p class="text-sm font-semibold"><%= edu.degree %> - <%= edu.schoolname %></p>
        <p class="text-sm text-gray-700"><%= edu.schoollocation %> (<%= edu.edustartdate %> - <%= edu.eduenddate %>)</p>
        <% if (edu.edusummary && edu.edusummary.trim() !== '') { %>
          <p class="text-sm mt-1"><%- edu.edusummary %></p>
        <% } %>
      <% }) %>
    </div>
  <% } %>
  
      <div class="mb-6">
        <h3 class="text-xl font-semibold mb-2">Languages</h3>
        <% if (languages.length > 0) { %>
          <ul class="list-disc list-inside text-sm text-gray-700">
            <% languages.forEach(lang => { %>
              <li><%= lang.name %> - <%= lang.level %></li>
            <% }) %>
          </ul>
        <% } %>
      </div>
      

      <!-- Courses -->
      <div class="mb-6">
        <h3 class="text-xl font-semibold border-b pb-1 border-gray-300 mb-2">Courses</h3>
        <% courses.forEach(course => { %>
            <p class="text-sm font-medium"><%= course.coursename %></p>
            <p class="text-sm text-gray-600"><%= course.courseinstitution %> (<%= course.coursestartDate %> - <%= course.courseendDate %>)</p>
          <% }) %>
          
      </div>

      <% if (typeof hobbies === 'string' && hobbies.trim() !== '') { %>
        <div class="mb-6">
          <h3 class="text-xl font-semibold border-b pb-1 border-gray-300 mb-2">Hobbies</h3>
          <p class="text-sm text-gray-700"><%- hobbies %></p>
        </div>
      <% } %>
      

    

    </div>
  </div>
</body>
</html>
